<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">rental_timeline.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_rental.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/form//field[@name='rental_type']"
                position="attributes"
            >
                <attribute
                    name="readonly"
                >state not in ('draft','sent','sale')</attribute>
            </xpath>
        </field>
    </record>
</odoo>
