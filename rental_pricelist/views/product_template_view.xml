<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">view.product.template.form</field>
        <field name="model">product.template</field>
        <field name="priority">112</field>
        <!--Priority greater than 100-->
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page
                    name="rental_price"
                    string="Rental Price"
                    invisible="not rental or type != 'product'"
                >
                    <group>
                        <field name="product_value_ids" invisible="1" />
                        <field
                            name="product_related_id"
                            options="{'no_create': True, 'no_create_edit': True}"
                            invisible="not rental_of_month and not rental_of_day and not rental_of_hour"
                        />
                    </group>
                    <group>
                        <group string="Monthly Basis">
                            <field name="rental_of_month" />
                            <field name="def_pricelist_id" invisible="1" />
                            <field
                                name="rental_price_month"
                                invisible="not rental_of_month"
                            />
                            <field
                                name="product_rental_month_id"
                                groups="base.group_no_one"
                            />
                            <field name="product_rental_month_id" invisible="1" />
                            <strong
                                colspan="2"
                                invisible="not product_rental_month_id or not product_related_id"
                            >
                                Bulk Prices
                            </strong>
                            <field
                                name="month_scale_pricelist_item_ids"
                                position="inside"
                                domain="[('product_id', '=', product_rental_month_id),
                                            ('pricelist_id', '=', def_pricelist_id)]"
                                context="{
                                    'default_applied_on': '0_product_variant',
                                    'default_compute_price': 'fixed',
                                    'default_product_id': product_rental_month_id, 'default_pricelist_id': def_pricelist_id}"
                                invisible="not rental_of_month or not product_rental_month_id or not product_related_id"
                                nolabel="1"
                                colspan="2"
                            >
                                <tree editable="bottom">
                                    <field name="min_quantity" />
                                    <field
                                        name="fixed_price"
                                        string="Price"
                                        required="1"
                                        widget="monetary"
                                        options="{'currency_field': 'currency_id'}"
                                    />
                                    <field name="compute_price" column_invisible="1" />
                                    <field name="applied_on" column_invisible="1" />
                                    <field name="pricelist_id" column_invisible="1" />
                                    <field name="product_id" column_invisible="1" />
                                    <field name="company_id" column_invisible="1" />
                                </tree>
                            </field>
                        </group>
                        <group string="Daily Basis">
                            <field name="rental_of_day" />
                            <field
                                name="rental_price_day"
                                invisible="not rental_of_day"
                            />
                            <field
                                name="product_rental_day_id"
                                groups="base.group_no_one"
                            />
                            <field name="product_rental_day_id" invisible="1" />
                            <strong
                                colspan="2"
                                invisible="not product_rental_day_id or not product_related_id"
                            >
                                Bulk Prices
                            </strong>
                            <field
                                name="day_scale_pricelist_item_ids"
                                position="inside"
                                domain="[('product_id', '=', product_rental_day_id),
                                                                        ('pricelist_id', '=', def_pricelist_id)]"
                                context="{
                                                                'default_applied_on': '0_product_variant',
                                                                'default_compute_price': 'fixed',
                                                                'default_product_id': product_rental_day_id, 'default_pricelist_id': def_pricelist_id}"
                                invisible="not rental_of_day or not product_rental_day_id or not product_related_id"
                                nolabel="1"
                                colspan="2"
                            >
                                <tree editable="bottom">
                                    <field name="min_quantity" />
                                    <field
                                        name="fixed_price"
                                        string="Price"
                                        required="1"
                                        widget="monetary"
                                        options="{'currency_field': 'currency_id'}"
                                    />
                                    <field name="compute_price" column_invisible="1" />
                                    <field name="applied_on" column_invisible="1" />
                                    <field name="pricelist_id" column_invisible="1" />
                                    <field name="product_id" column_invisible="1" />
                                    <field name="company_id" column_invisible="1" />
                                </tree>
                            </field>
                        </group>
                        <group string="Hourly Basis">
                            <field name="rental_of_hour" />
                            <field
                                name="rental_price_hour"
                                invisible="not rental_of_hour"
                            />
                            <field
                                name="product_rental_hour_id"
                                groups="base.group_no_one"
                            />
                            <field name="product_rental_hour_id" invisible="1" />
                            <strong
                                colspan="2"
                                invisible="not product_rental_hour_id or not product_related_id"
                            >
                                Bulk Prices
                            </strong>
                            <field
                                name="hour_scale_pricelist_item_ids"
                                position="inside"
                                domain="[('product_id', '=', product_rental_hour_id),
                                                                        ('pricelist_id', '=', def_pricelist_id)]"
                                context="{
                                                                'default_applied_on': '0_product_variant',
                                                                'default_compute_price': 'fixed',
                                                                'default_product_id': product_rental_hour_id, 'default_pricelist_id': def_pricelist_id}"
                                invisible="not rental_of_hour or not product_rental_hour_id or not product_related_id"
                                nolabel="1"
                                colspan="2"
                            >
                                <tree editable="bottom">
                                    <field name="min_quantity" />
                                    <field
                                        name="fixed_price"
                                        string="Price"
                                        required="1"
                                        widget="monetary"
                                        options="{'currency_field': 'currency_id'}"
                                    />
                                    <field name="compute_price" column_invisible="1" />
                                    <field name="applied_on" column_invisible="1" />
                                    <field name="pricelist_id" column_invisible="1" />
                                    <field name="product_id" column_invisible="1" />
                                    <field name="company_id" column_invisible="1" />
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
